{
  "openapi": "3.0.0",
  "info": {
    "title": "ATM API Documentation",
    "description": "This is an ATM API documentation to GSW code challenge",
    "version": "1.0.0",
    "contact": {
      "name": "Leandro Dias",
      "url": "https://leandrodbdias.dev",
      "email": "leandrodbdias@gmail.com"
    }
  },
  "paths": {
    "/atm/deposit": {
      "post": {
        "tags": ["ATM"],
        "summary": "Deposit",
        "description": "Method responsible for making deposits",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "amount": {
                    "type": "number",
                    "example": 1000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Success" },
          "400": { "description": "Bad request" }
        }
      }
    },
    "/atm/withdraw": {
      "post": {
        "tags": ["ATM"],
        "summary": "Withdraw",
        "description": "Method responsible for making withdraws",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "amount": {
                    "type": "number",
                    "example": 1000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/atm/extract": {
      "get": {
        "tags": ["ATM"],
        "summary": "Extract",
        "description": "Method responsible for consult the balance available",
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  }
}
